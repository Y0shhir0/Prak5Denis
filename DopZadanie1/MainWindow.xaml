<Window x:Class="DopZadanie1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DopZadanie1"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400" Background="Aqua">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите число N:"/>
            <TextBox x:Name="nTextBox"/>
            <TextBlock Text="Введите число K:"/>
            <TextBox x:Name="kTextBox"/>
            <Button Content="Вычислить сумму" Click="CalculateButton_Click"/>
            <TextBlock x:Name="Otvet" Text=""/>
        </StackPanel>
    </Grid>
</Window>
